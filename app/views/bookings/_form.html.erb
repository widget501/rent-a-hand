<div class="container">
  <%= simple_form_for([@service, @booking]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date, as: :string,
            input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date, as: :string,
            input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :status %>
      <%# <%= f.association :user %>
      <%# <%= f.association :service %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%#= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}},
    wrapper_html: {data: {controller: "address-autocomplete",
    address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]} class: "d-none"}%>

</div>
